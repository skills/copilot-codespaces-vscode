            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }
        button {
            display: block;
            margin: 10px auto;
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        #result {
            margin-top: 20px;
            font-size: 18px;
        }
        #score {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
